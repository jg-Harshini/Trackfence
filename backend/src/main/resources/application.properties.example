# Backend Environment Variables Template
# Copy this file to application.properties and fill in your values

# Server Configuration
server.port=8080

# MongoDB Atlas Configuration
# Get your connection string from MongoDB Atlas dashboard
spring.data.mongodb.uri=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
spring.data.mongodb.database=dementia_tracker

# JWT Configuration
# Generate a secure random string for production (at least 256 bits)
jwt.secret=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_AT_LEAST_256_BITS_LONG
jwt.expiration=86400000

# Shipday API Configuration
# Get your API key from Shipday dashboard
shipday.api.key=YOUR_SHIPDAY_API_KEY_HERE
shipday.api.url=https://api.shipday.com

# CORS Configuration
# Add your frontend URLs (comma-separated)
cors.allowed.origins=http://localhost:3000,http://localhost:5173
